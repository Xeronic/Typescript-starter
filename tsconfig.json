{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "./src",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "lib": ["es2015", "dom"]
    },
    "exclude": ["node_modules"],
    "include": ["src/*"],
    "compileOnSave": true
}
